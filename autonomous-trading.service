[Unit]
Description=Rust Algorithmic Trading System - Autonomous Mode
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=/mnt/c/Users/DaviCastroSamora/Documents/SamoraDC/RustAlgorithmTrading
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/mnt/c/Users/DaviCastroSamora/Documents/SamoraDC/RustAlgorithmTrading/scripts/autonomous_trading_system.sh --mode=continuous
Restart=always
