# Staging Environment Configuration
# DO NOT COMMIT REAL CREDENTIALS TO VERSION CONTROL

# PostgreSQL Configuration
STAGING_POSTGRES_DB=trading_staging
STAGING_POSTGRES_USER=trading_user
STAGING_POSTGRES_PASSWORD=staging_password_CHANGE_ME_IN_PRODUCTION

# DuckDB Configuration
STAGING_DUCKDB_PATH=/data/staging_trading.duckdb

# Binance API (Use TESTNET credentials)
STAGING_BINANCE_API_KEY=your_testnet_api_key_here
STAGING_BINANCE_SECRET_KEY=your_testnet_secret_key_here

# Trading Engine Configuration
STAGING_RUST_LOG=debug
STAGING_MAX_POSITION_SIZE=1000
STAGING_RISK_LIMIT_PERCENT=2.0

# Grafana Configuration
STAGING_GRAFANA_USER=admin
STAGING_GRAFANA_PASSWORD=staging_grafana_CHANGE_ME

# Performance Thresholds (for alerts)
STAGING_MAX_LATENCY_MS=100
STAGING_MIN_TPS=1000
STAGING_MAX_ERROR_RATE=0.01

# Load Testing Configuration
LOAD_TEST_DURATION=300
LOAD_TEST_USERS=100
LOAD_TEST_SPAWN_RATE=10
LOAD_TEST_TARGET_TPS=1000

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_INTERVAL_SEC=10
