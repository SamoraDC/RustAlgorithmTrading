# Docker Compose Environment Variables
# Copy this file to .env and customize

# ==========================================
# GRAFANA CONFIGURATION
# ==========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
# Change this in production!

# ==========================================
# OBSERVABILITY API CONFIGURATION
# ==========================================
DUCKDB_PATH=/app/data/metrics.duckdb
SQLITE_PATH=/app/data/trading.db
LOG_PATH=/app/logs
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# API Settings
ENABLE_CORS=true
API_PREFIX=/api/v1
WORKERS=2

# ==========================================
# PROMETHEUS CONFIGURATION
# ==========================================
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_STORAGE_PATH=/prometheus

# ==========================================
# NETWORK CONFIGURATION
# ==========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093
OBSERVABILITY_API_PORT=8000
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8080

# ==========================================
# RESOURCE LIMITS (for paper trading)
# ==========================================
# Prometheus
PROMETHEUS_CPU_LIMIT=1.0
PROMETHEUS_MEM_LIMIT=512M
PROMETHEUS_CPU_RESERVATION=0.25
PROMETHEUS_MEM_RESERVATION=256M

# Grafana
GRAFANA_CPU_LIMIT=1.0
GRAFANA_MEM_LIMIT=512M
GRAFANA_CPU_RESERVATION=0.25
GRAFANA_MEM_RESERVATION=256M

# Observability API
API_CPU_LIMIT=1.0
API_MEM_LIMIT=1G
API_CPU_RESERVATION=0.5
API_MEM_RESERVATION=512M

# ==========================================
# VOLUME PATHS (host system)
# ==========================================
DATA_PATH=../data
LOGS_PATH=../logs
CONFIG_PATH=./prometheus

# ==========================================
# ALERTING CONFIGURATION
# ==========================================
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_FROM=alerts@trading.local
ALERT_EMAIL_TO=admin@trading.local
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=
ALERT_SMTP_PASSWORD=

# Slack Alerts (optional)
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=

# Discord Alerts (optional)
ALERT_DISCORD_ENABLED=false
ALERT_DISCORD_WEBHOOK_URL=

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_NODE_EXPORTER=true
ENABLE_CADVISOR=true
ENABLE_WEBSOCKET_UPDATES=true
ENABLE_PUBLIC_DASHBOARDS=true

# ==========================================
# SECURITY
# ==========================================
# Generate secure random string: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_ENABLED=false
API_KEY=

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ==========================================
# DEVELOPMENT
# ==========================================
DEBUG_MODE=false
RELOAD_ON_CHANGE=false
